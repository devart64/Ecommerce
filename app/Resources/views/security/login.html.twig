{% extends 'layout/layout.html.twig' %}

{% block body %}

    <div class="container">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData) }}
            </div>
        {% endif %}
        <div class="row">
            <div class="span12">
                <h2>Connexion</h2><hr>
                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="span4">
                            <h4>Pas encore inscrit ?</h4>
                            <em>
                                nous vous invitons Ã  vous inscrire<br />
                                afin de passer votre commande.
                            </em>
                            <br /><br />
                            <a href="{{ path('register') }}" class="btn btn-primary">S'inscrire</a>

                        </div>

                        <div class="span4 offset2">
                            <h4>Connexion</h4><hr>
                            <form action="{{ path('security_login_check') }}" method="post">
                                <fieldset>
                                    <div class="form-group">
                                        <label for="email" class="col-md-4 control-label">Votre E-mail</label>

                                        <div class="col-md-8">
                                            <input id="email" type="email" class="form-control" name="_email" value="{{ last_username }}">
                                            <br/>   </div>


                                    </div>

                                    <div class="form-group">
                                        <label for="password" class="col-md-4 control-label">Votre mot de passe</label>

                                        <div class="col-md-8">
                                            <input id="password" type="password" class="form-control" name="_password">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-8 col-md-offset-8"><br/>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fa fa-btn fa-sign-in"></i> Connexion
                                            </button>
                                            </div>

                                      </div>

                                </fieldset>

                            </form>
<hr>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div><hr>
{% endblock %}