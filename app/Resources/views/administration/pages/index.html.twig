{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <div class="span9">
    <h1>Liste des pages</h1>
<hr>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.titre }}</td>
                <td>
                    <a href="{{ path('adminPages_show', { 'id': page.id }) }}"><i class="icon-book"></i> aperçu</a>
                   <br />
                    <a href="{{ path('adminPages_edit', { 'id': page.id }) }}">  <i class="icon-edit"></i> éditer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table><hr>
    <a href="{{ path('adminPages_new') }}"class="btn btn-primary"><i class="icon-edit"></i> Nouvelle page.</a>
    </div>
{% endblock %}
