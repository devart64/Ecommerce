{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des catégories</h1>
<hr>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('categories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.nom }}</td>
                <td>

                            <a href="{{ path('categories_show', { 'id': category.id }) }}"><i class="icon-book"></i> aperçu</a>
<br />
                            <a href="{{ path('categories_edit', { 'id': category.id }) }}"><i class="icon-edit"></i> éditer</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
    <a href="{{ path('categories_new') }}" class="btn btn-primary"><i class="icon-edit"></i> Créer une nouvelle catégorie</a>

{% endblock %}
