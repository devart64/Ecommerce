{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <div class="span9">
    <h1>Liste des produits</h1>
<hr>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{% if produit.disponible %}Dispo{% else %}Pas dispo{% endif %}</td>
                <td>

                            <a href="{{ path('adminProduits_show', { 'id': produit.id }) }}"><i class="icon-book"></i> Aperçu</a>
<br />
                            <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}"><i class="icon-edit"></i> Editer</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
            <a href="{{ path('adminProduits_new') }}"class="btn btn-primary"><i class="icon-edit"></i> Créer un nouveau produit</a>
    </div>
{% endblock %}
