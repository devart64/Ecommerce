{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
<div class="span9">
    <h1>Produit</h1>


    <hr>
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if produit.disponible %}Dispo{% else %}Pas dispo{% endif %}</td>
            </tr>
        </tbody>
    </table>

<br/>
            <a href="{{ path('adminProduits_edit', { 'id': produit.id }) }}"class="btn btn-primary"><i class="icon-edit"></i> Editer</a>

            {{ form_start(delete_form) }}
            <input id="prod-del" type="submit"class="btn btn-primary" value="Effacer">
            {{ form_end(delete_form) }}
    <hr>
    <a href="{{ path('adminProduits_index') }}"class="btn btn-primary"><i class="icon-arrow-left"></i> Retour</a>
    </div>
{% endblock %}
