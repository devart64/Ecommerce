{% extends 'layout/layoutAdmin.html.twig' %}

{% block body %}
    <div class="span9">
        <h1>Liste des factures du client</h1>
        <hr>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Références</th>
                <th>Dates</th>
                <th>Prix TTC</th>
            </tr>
            </thead>
            <tbody>
            {% if user.commandes|length == 0 %}
            <tr>
            <td colspan="4"><center>Aucune facture actuellement</center></td>
            </tr>
            {% endif %}
            {% for facture in user.commandes %}
                <tr>
                    <td>ref : {{ facture.reference }}</td>
                    <td>{{ facture.date|date('d/m/Y') }}</td>
                    <td>{{ facture.commande.prixTTC }} €</td>
                    <td><a href="{{ path('commandes_show', {'id' : facture.id}) }}" target="_blank"><i class="icon-refresh"></i> PDF</a> </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr>

            <a href="{{ path('clients') }}" class="btn btn-primary"><i class="icon-arrow-left"></i> Retour</a>

    </div>
        {% endblock %}
